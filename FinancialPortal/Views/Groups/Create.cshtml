<body class="hold-transition register-page">
    <div class="login-box">
        <div class="login-logo">
            <h1>Financial Portal</h1>
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">Create a Group</p>
                <div class="form-horizontal">
                    @using (Html.BeginForm("Create", "Groups", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-horizontal">
                            <div class="input-group mb-3">
                                <input name="groupName" class="form-control" placeholder="Name"/>
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-users"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <!-- /.col -->
                                <div class="col-12">
                                    <button class="btn btn-primary btn-block btn-flat" type="submit">Create Group</button>
                                </div>
                                <!-- /.col -->
                            </div>
                        </div>
                    }
                </div>

                <!--<div class="social-auth-links text-center mb-3">
